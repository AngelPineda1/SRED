@page
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agregar Tipo</title>
    <link rel="stylesheet" href="~/css/estilos.css" />
</head>
<body>
    <header class="body-headers">
        <a href="/Admin/Tipos/">
            <img src="~/assets/arrow-left-solid.svg" alt="" id="btn-regresar" />
        </a>
        <a class="sig-btn">
            <img src="~/assets/arrow-right-solid.svg" alt="" />
        </a>
    </header>
    <main id="main-agregaraula">
        <label for="">Nombre del tipo:</label>
        <input type="text" placeholder="Ingrese el nombre" id="nombre" />
        <label for="" id="excepcion"></label>
    </main>
</body>
</html>
<script>
    const nombretipio = localStorage.getItem('nombreTipo');
    const nombre = document.getElementById('nombre');
    let errores = [];
    const errorLabel = document.getElementById("excepcion");
    const sig = document.querySelector(".sig-btn");
    const ant = document.getElementById("btn-regresar");

    if (nombretipio != null) {
        nombre.value = nombretipio;
    }
    sig.addEventListener("click", function () {
        guardarNombre();
    });
    function guardarNombre() {
        errores = [];

        if (nombre.value.trim() === "") {
            errores.push("Debe agregar un nombre al aula");
        };
        if (errores.length > 0) {
            errorLabel.textContent = errores.join("\n");
        }else{

        localStorage.setItem('nombreTipo', nombre.value);
            window.location.replace("/Admin/Tipos/AgregarTipoIcono");
        }

    };
    ant.addEventListener("click", function () {
        localStorage.removeItem("nombreTipo");
    });
</script>
